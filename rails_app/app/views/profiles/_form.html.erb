<%= form_for @profile, url: url do |f| %>
  <%= f.label :first_name, 'First Name' %>
  <%= f.text_field :first_name %>

  <%= f.label :last_name, 'Last Name' %>
  <%= f.text_field :last_name %>

  <%= f.label :year_matriculated, 'Year Matriculated' %>
  <%= f.select :year_matriculated, (1921..Time.now.year).to_a, :include_blank => {:year => "Select year"} %>

  <%= f.label :city, 'City' %>
  <%= f.text_field :city %>

  <%= f.label :country, 'Country' %>
  <%= f.text_field :country %>

  <%= f.label :industry, 'Industry' %>
  <%= collection_select(:industry, :industry_id, Industry.all, :id, :name) %>

  <%= f.label :company, 'Company' %>
  <%= f.text_field :company %>

  <%= f.label :position, 'Position' %>
  <%= f.text_field :position %>

  <%= f.label :facebook_url, 'Facebook URL' %>
  <%= f.text_field :facebook_url %>

  <%= f.label :linkedin_url, 'LinkedIn URL' %>
  <%= f.text_field :linkedin_url %>

  <%= f.submit 'Submit' %>
<% end %>
